#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir>

set -eo pipefail

echo "FROM COMPILE"

# Paths.
BIN_DIR=$(cd $(dirname $0); pwd) # absolute path
ROOT_DIR=$(dirname $BIN_DIR)
BUILD_DIR=$1
CACHE_DIR=$2
ENV_DIR=$3


# Install dependencies with Pip.
echo "Installing docs dependencies with pip"


/app/.heroku/python/bin/pip install -r ${ROOT_DIR}/app/docs/requirements.txt --exists-action=w --src=./.heroku/src --allow-all-external --disable-pip-version-check --no-cache-dir
