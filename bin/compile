#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir>

set -eo pipefail

echo "FROM COMPILE"

# Paths.
BIN_DIR=$(cd $(dirname $0); pwd) # absolute path
ROOT_DIR=$(dirname $BIN_DIR)
BUILD_DIR=$1
CACHE_DIR=$2
ENV_DIR=$3

cat ${ROOT_DIR}/requirements.txt >> ${BUILD_DIR}/requirements.txt

(cd ${BUILD_DIR} && make apidoc html)

cp ${ROOT_DIR}/Profile ${BUILD_DIR}
cp ${ROOT_DIR}/wsgi.py ${BUILD_DIR}
