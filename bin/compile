#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir>

set -eo pipefail

echo "FROM COMPILE"

# Paths.
BIN_DIR=$(cd $(dirname $0); pwd) # absolute path
ROOT_DIR=$(dirname $BIN_DIR)
BUILD_DIR=$1
CACHE_DIR=$2
ENV_DIR=$3

echo $BIN_DIR
echo $ROOT_DIR
echo $BUILD_DIR
echo $CACHE_DIR
echo $ENV_DIR

PIP=/app/.heroku/python/bin/pip

# Install dependencies with Pip.
echo "Installing docs dependencies with pip"
PIP install -r ${ROOT_DIR}/app/docs/requirements.txt --exists-action=w --src=./.heroku/src --allow-all-external --disable-pip-version-check --no-cache-dir
PIP install -U static waitress

(cd ${BUILD_DIR} && make apidoc html)

cp ${BIN_DIR}/Profile ${BUILD_DIR}
cp ${BIN_DIR}/wsgi.py ${BUILD_DIR}
